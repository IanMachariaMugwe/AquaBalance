<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DataCollectionActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/DataCollectionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data Collection for Region"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/RegionName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Region Name"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/Population"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Population"
                android:inputType="number"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/StorageCapacity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Total Storage Capacity (liters)"
                android:inputType="number"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/CurrentCapacity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Current Storage Capacity (liters)"
                android:inputType="number"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/DailyUsage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Daily Usage per Capita (liters)"
                android:inputType="number"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/FlowRate_min"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Current Flow Rate (liters per minute)"
                android:inputType="numberDecimal"
                android:layout_marginTop="16dp"/>

            <Button
                android:id="@+id/btnPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Post"
                android:layout_marginTop="24dp"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/btnResults"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Results"
                android:layout_marginTop="24dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/tvResults"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnResults"
                android:layout_marginTop="16dp"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:gravity="start"
                android:text="Results will display here"
                android:layout_centerHorizontal="true"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
